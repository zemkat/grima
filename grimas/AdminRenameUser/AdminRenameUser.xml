<GrimaForm>
	<Title>Grima: Rename User</Title>
	<Field
		name="username"
		label="Username:"
		autocomplete="on"
		required="yes"
		placeholder="User's login..."
	/>
	<Field
		name="newusername"
		label="New Username:"
		autocomplete="off"
		required="yes"
		placeholder="User's NEW login..."
	/>
	<Field
		name="institution"
		label="Institution:"
		autocomplete="on"
		required="no"
		placeholder="Institution..."
		persistent="yes"
	/>
	<Field
		name="redirect_url"
		type="hidden"
		required="no"
	/>
</GrimaForm>
